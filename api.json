{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.2",
    "title": "A new PackageTracker API",
    "description": "An API to track the ongoing status of a package easily **** ",
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "contact": {
      "name": "Dave Felcey",
      "email": "dave.felcey@mulesoft.com",
      "url": "https://mulesoft.com/appi"
    }
  },
  "tags": [
    {
      "name": "A Package Tracking API",
      "description": "Get current package status"
    }
  ],
  "security": [
    {
      "BasicAuth": []
    }
  ],
  "paths": {
    "/status/{id}": {
      "get": {
        "tags": ["Package Tracking"],
        "description": "Gets the status of a package",
        "operationId": "get package status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of package",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^[{]?[0-9a-fA-F]{8}-([0-9a-fA-F]{4}-){3}[0-9a-fA-F]{12}[}]?$"
            },
            "example": "79311a05-1548-4cf0-b6e2-5d1d41934a55"
          }
        ],
        "responses": {
          "200": {
            "description": "package response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Body"
                },
                "example": {
                  "status": "In transit",
                  "message": "On route to destination"
                }
              }
            }
          },
          "429": {
            "description": "Too many requests",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralError"
                },
                "example": {
                  "code": 429,
                  "message": "Too many requests"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },
    "schemas": {
      "GeneralError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "pattern": "^[ a-zA-Z0-9]+"
          }
        }
      },
      "Body": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "pattern": "^[ a-zA-Z0-9]+",
            "example": "In transit"
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "pattern": "^[ a-zA-Z0-9]+",
            "example": "On route to destination"
          }
        },
        "example": {
          "status": "In transit",
          "message": "On route to destination"
        }
      }
    }
  }
}
